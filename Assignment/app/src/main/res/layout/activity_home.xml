<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_student_marks_and_grade"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="@dimen/all_margin"
        android:textColor="#ff00ff"/>

   <ScrollView
       android:id="@+id/scrollView1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/textView1"
       android:layout_above="@id/submit"
       android:layout_marginTop="@dimen/inputs_margin_top"
       android:layout_marginBottom="@dimen/inputs_margin_top">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/all_margin">

           <TextView
               android:id="@+id/textView2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Name"
               android:textColor="@color/text_color"
               android:textSize="24sp"
               android:layout_marginStart="@dimen/all_margin"/>
           <EditText
               android:id="@+id/student_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Student Name..."
               android:layout_marginTop="@dimen/inputs_margin_top"
               android:background="@drawable/inputs"
               android:textColorHint="@android:color/black"
               android:padding="@dimen/all_margin"
               android:layout_below="@id/textView2"/>
           <TextView
               android:id="@+id/textView3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Registration Number"
               android:textColor="@color/text_color"
               android:textSize="24sp"
               android:layout_below="@id/student_name"
               android:layout_marginStart="@dimen/all_margin"/>
           <EditText
               android:id="@+id/reg_number"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Registration Number..."
               android:layout_marginTop="@dimen/inputs_margin_top"
               android:background="@drawable/inputs"
               android:textColorHint="@android:color/black"
               android:padding="@dimen/all_margin"
               android:layout_below="@id/textView3" />
           <TextView
               android:id="@+id/textView4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Unit Name"
               android:textColor="@color/text_color"
               android:textSize="24sp"
               android:layout_below="@id/reg_number"
               android:layout_marginStart="@dimen/all_margin"/>
           <EditText
               android:id="@+id/unit_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Unit Name..."
               android:layout_marginTop="@dimen/inputs_margin_top"
               android:background="@drawable/inputs"
               android:textColorHint="@android:color/black"
               android:padding="@dimen/all_margin"
               android:layout_below="@id/textView4" />
           <TextView
               android:id="@+id/textView5"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Unit Code"
               android:textColor="@color/text_color"
               android:textSize="24sp"
               android:layout_below="@id/unit_name"
               android:layout_marginStart="@dimen/all_margin"/>
           <EditText
               android:id="@+id/unit_code"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Unit Code..."
               android:layout_marginTop="@dimen/inputs_margin_top"
               android:background="@drawable/inputs"
               android:textColorHint="@android:color/black"
               android:padding="@dimen/all_margin"
               android:layout_below="@id/textView5" />
           <TextView
               android:id="@+id/textView6"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Unit Marks"
               android:textColor="@color/text_color"
               android:textSize="24sp"
               android:layout_below="@id/unit_code"
               android:layout_marginStart="@dimen/all_margin"/>
           <EditText
               android:id="@+id/unit_marks"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Unit Marks..."
               android:layout_marginTop="@dimen/inputs_margin_top"
               android:background="@drawable/inputs"
               android:textColorHint="@android:color/black"
               android:padding="@dimen/all_margin"
               android:layout_below="@id/textView6" />
           <TextView
               android:id="@+id/textView7"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Unit Grade"
               android:textColor="@color/text_color"
               android:textSize="24sp"
               android:layout_below="@id/unit_marks"
               android:layout_marginStart="@dimen/all_margin"/>
           <EditText
               android:id="@+id/unit_grade"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Unit Grade..."
               android:layout_below="@id/textView7"
               android:layout_marginTop="@dimen/inputs_margin_top"
               android:layout_marginBottom="20dp"
               android:background="@drawable/inputs"
               android:textColorHint="@android:color/black"
               android:padding="@dimen/all_margin"/>
       </RelativeLayout>
   </ScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/all_margin"
        android:background="@drawable/button"
        android:textColor="@android:color/background_light"
        android:padding="18sp"/>


</RelativeLayout>