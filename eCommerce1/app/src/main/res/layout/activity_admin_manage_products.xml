<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminManageProductsActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/manage_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            />
        <EditText
            android:id="@+id/manage_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/manage_product_image"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:hint="Product Name"
            android:textStyle="bold"
            android:background="@drawable/inputs"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/manage_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/manage_product_name"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:background="@drawable/inputs"
            android:padding="20dp"
            android:hint="Product Price"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/manage_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_below="@id/manage_product_price"
            android:background="@drawable/inputs"
            android:padding="20dp"
            android:hint="Product Description"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/manage_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/manage_product_description"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/buttons"
            android:padding="20dp"
            android:text="Apply Changes"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"/>
        <Button
            android:id="@+id/manage_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/manage_changes_btn"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:padding="20dp"
            android:text="Delete This Product"
            android:textAllCaps="false"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>