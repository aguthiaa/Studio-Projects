<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/admin_category_add_new_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="15dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/admin_category_add_new_product"
        android:layout_above="@id/admin_category_manage_products">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear_category_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/category_tShirts"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:src="@drawable/tshirts"/>
                <ImageView
                    android:id="@+id/category_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sports"/>
                <ImageView
                    android:id="@+id/category_felame_dresses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/female_dresses"/>
                <ImageView
                    android:id="@+id/category_sweathers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sweather"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_category_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/linear_category_layout_1">

                <ImageView
                    android:id="@+id/category_glasses"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/glasses"/>
                <ImageView
                    android:id="@+id/category_purses_bags_wallets"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/purses_bags"/>
                <ImageView
                    android:id="@+id/category_hats"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hats"/>
                <ImageView
                    android:id="@+id/category_shoes"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:src="@drawable/shoess"
                    android:layout_marginStart="16dp"/>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_category_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/linear_category_layout_2">

                <ImageView
                    android:id="@+id/category_headphones"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/headphoness"/>
                <ImageView
                    android:id="@+id/category_laptops"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/laptops"/>
                <ImageView
                    android:id="@+id/category_watches"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/watches"/>
                <ImageView
                    android:id="@+id/category_mobile_phone"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mobiles"
                    android:layout_marginStart="16dp"/>



            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/admin_category_manage_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_above="@id/admin_category_check_new_orders"
        android:textSize="18sp"
        android:text="Manage Products"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/admin_category_check_new_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_above="@id/admin_category_logout_btn"
        android:textSize="18sp"
        android:text="Check New Orders"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/admin_category_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:text="Logout Admin"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>


</RelativeLayout>