<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".ResetPasswordActivity">

    <include
        android:id="@+id/reset_password_toolbar"
        layout="@layout/app_bar_layout"/>

    <TextView
        android:id="@+id/just_a_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Email to Proceed. A Password reset link will be sent to your email account."
        android:textAlignment="center"
       android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <EditText
        android:id="@+id/reset_password_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email..."
        android:layout_below="@id/just_a_text"
        android:background="@drawable/inputs"
        android:padding="@dimen/inputs_padding"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:padding="@dimen/button_padding"
        android:text="Send Email"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_below="@id/reset_password_email_input"
        android:layout_marginTop="@dimen/inputs_padding"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@android:color/white"/>


</RelativeLayout>