<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/app_bar_layout">

    </include>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/settings_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_profile_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"
                android:layout_marginTop="@dimen/margin_top"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:layout_below="@id/settings_profile_image"
                android:layout_marginLeft="@dimen/margin_top"/>

            <EditText
                android:id="@+id/settings_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:layout_below="@id/textView1"
                android:layout_marginTop="@dimen/inputs_padding"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:padding="@dimen/inputs_padding"
                android:hint="Status..."
                android:inputType="textMultiLine"
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username:"
                android:layout_below="@id/settings_status"
                android:layout_marginLeft="@dimen/margin_top"/>
            <EditText
                android:id="@+id/settings_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:layout_below="@id/textView2"
                android:layout_marginTop="@dimen/inputs_padding"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:padding="@dimen/inputs_padding"
                android:hint="Username..."
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fullname:"
                android:layout_below="@id/settings_username"
                android:layout_marginLeft="@dimen/margin_top"/>
            <EditText
                android:id="@+id/settings_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:layout_below="@id/textView3"
                android:layout_marginTop="@dimen/inputs_padding"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:padding="@dimen/inputs_padding"
                android:hint="Fullname..."
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country:"
                android:layout_below="@id/settings_fullname"
                android:layout_marginLeft="@dimen/margin_top"/>
            <EditText
                android:id="@+id/settings_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:layout_below="@id/textView4"
                android:layout_marginTop="@dimen/inputs_padding"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:padding="@dimen/inputs_padding"
                android:hint="Country..."
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of birth:"
                android:layout_below="@id/settings_country"
                android:layout_marginLeft="@dimen/margin_top"/>
            <EditText
                android:id="@+id/settings_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:layout_below="@id/textView5"
                android:layout_marginTop="@dimen/inputs_padding"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:padding="@dimen/inputs_padding"
                android:hint="Date of birth..."
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:layout_below="@id/settings_date_of_birth"
                android:layout_marginLeft="@dimen/margin_top"/>
            <EditText
                android:id="@+id/settings_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:layout_below="@id/textView6"
                android:layout_marginTop="@dimen/inputs_padding"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:padding="@dimen/inputs_padding"
                android:hint="Gender..."
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relationship status:"
                android:layout_below="@id/settings_gender"
                android:layout_marginLeft="@dimen/margin_top"/>
            <EditText
                android:id="@+id/settings_relationship_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:layout_below="@id/textView7"
                android:layout_marginTop="@dimen/inputs_padding"
                android:layout_marginLeft="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_top"
                android:padding="@dimen/inputs_padding"
                android:hint="Relationship status..."
                android:textColor="@android:color/background_dark"/>

            <Button
                android:id="@+id/settings_update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Account Settings"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/button"
                android:layout_below="@id/settings_relationship_status"
                android:layout_margin="@dimen/margin_top"
                android:padding="@dimen/button_padding"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>